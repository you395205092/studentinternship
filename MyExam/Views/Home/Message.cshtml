
<link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/css/H-ui.admin.css" />
<div style="background:url(/Public/Home/Images/banner.jpg) top center  no-repeat ; height:400px;">
</div>
<div class="w1000">
    <div class="pageleft">
        <div class="leftbox1">
            <div class="box1title">
                会员中心
            </div>
        </div>
        @Html.Partial("LeftUser")

    </div>
    <div class="pageright">
        <dl class="righttitle">
            <dt><b>会员中心</b></dt>
            <dd>
                您的位置：<a href="/Home">首页</a> &gt;
                <a href="/Home/MessageList">留言中心</a>

            </dd>
        </dl>
        <div class="content">
            <div class="aboutus">
                <form action="" method="post" name="formAdd" id="formAdd">
                    <ul>
                        <li class="zhuce_form">
                            <label>标题:</label>
                            <input type="text" name="Title" id="Title" />
                        </li>
                        <li>
                            <label>留言内容:</label>
                            <script id="MesContent" name="MesContent" type="text/plain" style="width:100%;height:400px;">
                            </script>
                        </li>
                        <li><input type="submit" value="立即提交" class="submitBtn"></li>
                    </ul>
                    
                </form>
            </div>
        </div>
    </div>
</div>





<script type="text/javascript" src="/lib/ueditor/1.4.3/ueditor.config.js"></script>
<script type="text/javascript" src="/lib/ueditor/1.4.3/ueditor.all.min.js"></script>
<script type="text/javascript">
    $(function () {
        var saveAjax = function () {
            var formData = $("#formAdd").serializeArray();
            $.ajax({
                url: "/Home/Message/",
                type: "post",
                data: formData,
                dataType: "json",
                success: function (res) {
                    if (res.status == "ok") {
                        //parent.location.reload();//刷新父窗口
                        alert("提交成功！");
                        window.location.href = "/Home/MessageList";
                    }
                    else {
                        alert(res.errorMsg);
                    }
                },
                error: function () { alert("请求出错"); }
            });
        };

        $("#formAdd").validate({
            rules: {
                Title: {
                    required: true,
                    minlength: 2,
                    maxlength: 100
                },
                MesContent: {
                    required: true,
                    minlength: 2,
                    maxlength: 1000
                }

            },
            onkeyup: false,
            focusCleanup: true,
            success: "valid",
            submitHandler: function (form) {
                saveAjax();
            }
        });
        var ue = UE.getEditor('MesContent');
    });
</script>
