@model WorkPostDTO[]

<div style="background:url(/Public/Home/Images/banner.jpg) top center  no-repeat ; height:400px;">
</div>
<div class="w1000">
    <div class="pageleft">
        <div class="leftbox1">
            <div class="box1title">
                会员中心
            </div>
        </div>
        @Html.Partial("LeftUser")

    </div>
    <div class="pageright">
        <dl class="righttitle">
            <dt><b>在线答题</b></dt>
            <dd>
                您的位置：<a href="/Home/UserIndex">首页</a> &gt;
                <a href="/Home/PaperList">在线答题</a>
            </dd>
        </dl>
        <div class="content">
            <div class="aboutus">

                    @if (Model.LongCount() <= 0)
                    {
                        <h1 style="color:#ff0000; font-size:16px; font-weight:bold;">您的分数为：@ViewBag.ExamScore，等待老师分配岗位供你选择！</h1>
                    }

                    <table style="margin:10px auto; width:100%;" border="0"  cellpadding="0" cellspacing="0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td height="30">岗位：@item.Position</td>
                                <td>时薪：@item.Wage</td>
                                <td>经理：@item.Manager</td>
                                <td>邮箱：@item.Email</td>
                            </tr>
                            <tr>
                                <td colspan="3" height="30">地址：@item.Address</td>
                                <td class="btnred"><a href="/Home/WorkPostUpdate/@item.Id">应聘</a></td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border-bottom:#999 1px solid;">&nbsp;</td>
                            </tr>
                        }
                    </table>



            </div>
        </div>
    </div>
</div>
